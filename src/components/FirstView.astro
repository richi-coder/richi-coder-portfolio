	.logo {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;
		margin: 0;
		padding: 0;
		position: relative;
		height: 22vh;
	}
	.richi {
		font-size: 4rem; 
		font-weight: 800;
		margin: 0;
		padding: 0;
		color: white;
        font-family: 'Orbitron', system-ui;
		animation: richi 2s linear 1;
		white-space: nowrap;
		overflow: hidden;
		text-align: start;
		width: 5%;
	}
	.coder {
		font-size: 10rem;
		font-weight: 500;
		margin: 0;
		padding: 0;
		font-family: 'Orbitron', system-ui;
		animation: coder 2s linear 1;
		white-space: nowrap;
		overflow: hidden;
		text-align: start;
	    width: 9%; 
	}
	@keyframes richi {
		0% { width: 5%; transform: translate(0,-70vh ); opacity: 0;}
		10% { transform: translate(0,-70vh ); }
		15% { transform: translate(0,0); opacity: 1;}
		20% { transform: translate(0,-5vh);}
		25% { transform: translate(0,0);}
	}
	@keyframes coder {
		0% { width: 9	%; transform: translate(0,-70vh); opacity: 1;}
		25% { transform: translate(0,-70vh ); }
		30% { transform: translate(0,0); opacity: 1 }
		35% { transform: translate(0,-7vh);}
		40% { transform: translate(0,0);}
	}
	@media only screen and (min-width: 1020px) {
        .richi {
            font-size: 10rem;
        }
		.coder {
			font-size: 10rem;
		}
    }
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.tech {
		display: flex;
		flex-direction: column;
		align-self: center;
		background-color: transparent;
		position: relative;
		top: 350%;
		left: 0; 
		animation: tech 7s ease-in-out infinite 1s;
		padding: 0;
		margin: 0;
		padding-left: 15px;
		z-index: -1;
		white-space: nowrap;
		overflow: hidden;
	}
	@keyframes tech {
		0% {opacity: 0; width: 40%;}
		5% {opacity: 1 ; width: 35%;}
		15% {transform: translate(0,-20%);}
		20% {transform: translate(0,-20%);}
		35% {transform: translate(0,-40%);}
		40% {transform: translate(0,-40%);}
		55% {transform: translate(0,-60%);}
		60% {transform: translate(0,-60%);}
		75% {transform: translate(0,-80%);}
		80% {transform: translate(0,-80%);}
		95% {transform: translate(0,-100%); opacity: 1; width: 50% }
		100% {transform: translate(0,-100%); opacity: 0; width: 0% }
	}
	.tech > div {
		font-size: 8rem;
		font-family: 'Play', 'system-ui';
		margin: 0;
		padding: 0;
	}
	.layer {
		width: 100vw;
		flex-grow: 1;
		z-index: 50;
		position: relative;
	}
	.layer:first-child {
		background: linear-gradient(180deg, rgb(10,10,10) 90%, transparent 100%);
		animation: firstLayer 1s ease-in-out 1;
	}
	@keyframes firstLayer {
		0% {opacity: 0;}
		100% {opacity: 0;}
	}
	.layer:last-child {
		background: linear-gradient(0deg, rgb(10,10,10) 90%, transparent 100%);
	}
	.bar {
		animation: bar 7s ease-in 1;
	}
	@keyframes bar {
		0% {opacity: 0;}
		13% {opacity: 0;}
		25% {opacity: 1;}
	}
	.view-navbar {
		animation: viewNavbar 10s ease-in-out 1;
		transform: translate(-50%,0%);
	}
	@keyframes viewNavbar {
		0% {transform: translate(-50%,-100%); opacity: 1;}
		90% {transform: translate(-50%,-100%); opacity: 1;}
	}

</style>
