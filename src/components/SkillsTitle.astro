---
import Title from "./Title.astro";
---

<div class="skillsTitleContainer w-full h-screen absolute top-0 left-0 -z-10">
  <div id="slideContainer" class="absolute top-0 left-0">
    <section class="panel blue">
      <Title id="skills-title" title="Skills" preTitle="richi" titleClass='text-6xl sm:text-9xl' />
    </section>
    <section class="panel turqoise flex flex-col justify-center">
      <Title id="responsive-title" title="Design" preTitle="responsive" />
      <div
        class="responsive-tools container grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 text-4xl sm:text-3xl md:text-5xl m-auto gap-9 sm:gap-7 md:gap-y-40 md:-gap-x-5 lg:gap-y-12"
      >
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[15vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          <i class="devicon-html5-plain text-5xl sm:text-7xl"></i>

          <div>HTML5</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[15vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          <i class="devicon-css3-plain text-5xl sm:text-7xl"></i>

          <div>CSS</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[15vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          <i class="devicon-markdown-original text-5xl sm:text-7xl"></i>

          <div>Markdown</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[15vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          <i class="devicon-bootstrap-plain text-5xl sm:text-7xl"></i>

          <div>Bootstrap</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[15vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          <i class="devicon-tailwindcss-plain text-5xl sm:text-7xl"></i>

          <div>TailwindCSS</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[15vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          <i class="devicon-sass-original text-5xl sm:text-7xl"></i>

          <div>SASS</div>
        </div>
        <div
          class="flex flex-row items-center justify-start pl-[15vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center sm:col-span-2 md:col-span-3"
        >
          <i class="devicon-firefox-plain text-5xl sm:text-7xl"></i>
          <i class="devicon-chrome-plain text-5xl sm:text-7xl -ml-5 sm:ml-0"></i>
          <div class='-ml-2 sm:ml-0'>Dev Tools</div>
        </div>
      </div>
    </section>
    <section class="panel green flex flex-col justify-center">
      <Title id="spa-title" title="Development" preTitle="app" />
      <div
        class="spa-tools container grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 text-4xl sm:text-3xl md:text-5xl m-auto gap-9 sm:gap-7 md:gap-y-40 md:-gap-x-5 lg:gap-y-12"
      >
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <div class='flex flex-row'>
        <i class="devicon-javascript-plain text-5xl sm:text-7xl relative"></i>
        <i class="devicon-typescript-plain text-5xl sm:text-7xl -z-10 relative"></i>
        </div>

          <div>JS / TS</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <i class="devicon-react-original text-5xl sm:text-7xl"></i>

          <div>React</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <i class="devicon-redux-original text-5xl sm:text-7xl"></i>

          <div>Router</div>
        </div>
        <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <div class='flex flex-row'>
        <i class="devicon-nextjs-original text-5xl sm:text-7xl"></i>
        </div>
          <div>Next.js</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <i class="devicon-redux-original text-5xl sm:text-7xl"></i>
          
          <div>Redux</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 128 128"><path fill="currentColor" d="M81.504 9.465c.973 1.207 1.469 2.836 2.457 6.09l21.656 71.136a90.079 90.079 0 0 0-25.89-8.765L65.629 30.28a1.833 1.833 0 0 0-3.52.004L48.18 77.902a90.104 90.104 0 0 0-26.003 8.778l21.758-71.14c.996-3.25 1.492-4.876 2.464-6.083a8.023 8.023 0 0 1 3.243-2.398c1.433-.575 3.136-.575 6.535-.575H71.72c3.402 0 5.105 0 6.543.579a7.988 7.988 0 0 1 3.242 2.402Zm2.59 80.61c-3.57 3.054-10.696 5.136-18.903 5.136c-10.07 0-18.515-3.137-20.754-7.356c-.8 2.418-.98 5.184-.98 6.954c0 0-.527 8.675 5.508 14.71a5.671 5.671 0 0 1 5.672-5.671c5.37 0 5.367 4.683 5.363 8.488v.336c0 5.773 3.527 10.719 8.543 12.805a11.62 11.62 0 0 1-1.172-5.098c0-5.508 3.23-7.555 6.988-9.938c2.989-1.894 6.309-4 8.594-8.222a15.513 15.513 0 0 0 1.875-7.41a15.55 15.55 0 0 0-.734-4.735Zm0 0"/></svg>

          <div>Astro</div>
        </div>
        <div
          class="flex flex-row items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center sm:col-span-2 md:col-span-3"
        >
          
        <i class="devicon-react-original text-5xl sm:text-7xl"></i>
        <i class="devicon-redux-original text-5xl sm:text-7xl"></i>
          
          <div class='-ml-2 sm:ml-0'>Dev Tools</div>
        </div>
      </div>
    </section>
    <section class="panel bordeaux">
      <Title id="projectInit-title" title="Initialization" preTitle="project" />
      <div
        class="init-tools container grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 text-4xl sm:text-3xl md:text-5xl pt-14 md:pt-32 sm:pt-12 m-auto gap-10 sm:gap-7 md:gap-y-52 md:gap-x-0 lg:gap-y-12 lg:pt-16"
      >
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <i class="devicon-vscode-plain text-5xl sm:text-7xl"></i>

          <div>VSCode</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <i class="devicon-github-original text-5xl sm:text-7xl"></i>

          <div>GIT/Github</div>
        </div>
        <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <i class="fa fa-terminal text-5xl sm:text-7xl"></i>
        
        <div>Terminal</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <i class="devicon-npm-original-wordmark text-5xl sm:text-7xl"></i>
          
          <div>NPM</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <i class="devicon-webpack-plain text-5xl sm:text-7xl"></i>

          <div>Webpack</div>
        </div>
        <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 24 24"><path fill="white" d="m8.286 10.578l.512-8.657a.306.306 0 0 1 .247-.282L17.377.006a.306.306 0 0 1 .353.385l-1.558 5.403a.306.306 0 0 0 .352.385l2.388-.46a.306.306 0 0 1 .332.438l-6.79 13.55l-.123.19a.294.294 0 0 1-.252.14c-.177 0-.35-.152-.305-.369l1.095-5.301a.306.306 0 0 0-.388-.355l-1.433.435a.306.306 0 0 1-.389-.354l.69-3.375a.306.306 0 0 0-.37-.36l-2.32.536a.306.306 0 0 1-.374-.316zm14.976-7.926L17.284 3.74l-.544 1.887l2.077-.4a.8.8 0 0 1 .84.369a.8.8 0 0 1 .034.783L12.9 19.93l-.013.025l-.015.023l-.122.19a.801.801 0 0 1-.672.37a.826.826 0 0 1-.634-.302a.8.8 0 0 1-.16-.67l1.029-4.981l-1.12.34a.81.81 0 0 1-.86-.262a.802.802 0 0 1-.165-.67l.63-3.08l-2.027.468a.808.808 0 0 1-.768-.233a.81.81 0 0 1-.217-.6l.389-6.57l-7.44-1.33a.612.612 0 0 0-.64.906L11.58 23.691a.612.612 0 0 0 1.066-.004l11.26-20.135a.612.612 0 0 0-.644-.9z"/></svg>
          
          <div class='-ml-2 sm:ml-0'>Vite</div>
        </div>
      </div>
    </section>
    <section class="panel orange">
      <Title id="others-title" title="Tools" preTitle="other" />
      <div
        class="other-tools container grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 text-4xl sm:text-3xl md:text-5xl m-auto gap-3 sm:gap-12 md:gap-y-32 lg:gap-y-12 pt-10  md:pt-20 lg:pt-12"
      >
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >

          <div class='-ml-2 sm:ml-0'>- REST APIs</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >

          <div class='-ml-2 sm:ml-0'>- AJAX</div>
        </div>
        <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
        
          <div class='-ml-2 sm:ml-0'>- Chart JS</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          
          <div class='-ml-2 sm:ml-0'>- jQuery</div>
        </div>
        <div
          class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >

          <div class='-ml-2 sm:ml-0'>- Firebase</div>
        </div>
        <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          
          <div class='-ml-2 sm:ml-0'>- PWA</div>
        </div>
        <!-- <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          
          <div class='-ml-2 sm:ml-0'>Tabnine</div>
        </div> -->
        <!-- <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          
          <div class='-ml-2 sm:ml-0'>ESLint</div>
        </div> -->
        <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          
          <div class='-ml-2 sm:ml-0'>- Three.js</div>
        </div>
        <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          
          <div class='-ml-2 sm:ml-0'>- Figma</div>
        </div>
        <div
        class="flex flex-row md:flex-col items-center justify-start pl-[12vw] sm:pl-0 gap-7 sm:gap-3 sm:justify-center"
        >
          
          <div class='-ml-2 sm:ml-0'>- Testing</div>
        </div>
      </div>
    </section>
  </div>
</div>

<style>
  .skillsTitleContainer {
    perspective: 1000;
    -webkit-perspective: 1000;
    overflow: hidden;
  }
  #slideContainer {
    width: 500%;
    height: 100vh;
    display: flex;
    flex-direction: row;
  }
  .panel {
    position: relative;
    width: 20%;
    height: 100vh;
    padding-top: 7vh;
  }
  .blue {
    background-color: rgb(10, 10, 10);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .turqoise {
    background-color: blue;
  }
  .green {
    background-color: rgb(10, 10, 10);
  }
  .bordeaux {
    background-color: purple;
  }
  .orange {
    background-color: rgb(10, 10, 10);
  }

</style>
