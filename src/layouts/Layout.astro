<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #00407c 30%,
      white 60%
    );
  }
  html {
    background-color: #f6f6f6;
    scroll-behavior: smooth;
    
  }
  .body-animation {
    animation: body 12s ease-in-out 1;
    overflow-y: unset;
  }
  .body-another-page {
    overflow-y: unset;
  }
  body {
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100vh;
    overflow-y: clip;
  }
   @keyframes body {
    0% {overflow-y: clip;}
    100% {overflow-y: clip;}
  }
</style>
