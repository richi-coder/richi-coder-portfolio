---

{
    tweetReviews.length > 0 ?
    <div id='reviews' class='relative w-full z-[60] pt-16'>
    
    <div class='w-full h-52 relative bg-[rgb(10,10,10)] overflow-clip -mt-1'>
        <div class='w-fit flex flex-row flex-nowrap gap-x-10 absolute top-2 left-0 moveTweets1'>
            {
                tweetReviews.map((tweet, index) => <Review tweetCard={tweetReviews[index]} client:only='react' />)
            }
        </div>
    </div>
    <div class='w-full h-52 relative bg-[rgb(10,10,10)] overflow-clip -mt-1'>
        <div class='w-fit flex flex-row flex-nowrap gap-x-10 absolute top-2 left-0 moveTweets2'>
            {
                tweetReviews.map((tweet, index) => <Review tweetCard={tweetReviews[index]} client:only='react' />)
            }
        </div>
    </div>
    </div> :
    null
}

<style>
    @media only screen and (min-width: 700px) {
        :root {
            --start: -10vw;
            --end: -30vw;
            --duration: 7s;
        }
    }
    @media only screen and (max-width: 699px) {
        :root {
            --start: 0vw;
            --end: -80%;
            --duration: 15s;
        }
    }
    .moveTweets1 {
        animation: moveTweets var(--duration) ease-in-out infinite alternate;
    }
    .moveTweets2 {
        animation: moveTweets var(--duration) ease-in-out infinite alternate-reverse;
        animation: name duration timing-function delay iteration-count direction fill-mode;
    }
    @keyframes moveTweets {
        0% {transform: translate(var(--start),0)}
        100% {transform: translate(var(--end),0)}
    }
</style>